@model WineSoFine.ViewModels.RandomWineViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{ 
    var className = Model.Customers.Count > 5 ? "popular" : null;
}
<h2 class="@className">@Model.Wine.Name</h2>

@if (Model.Customers.Count==0)
{
    <p>No one has bought this wine before! Congratulations You are the first purchaser!</p>
}
else { 
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}
